<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.constraint.Constraintlayout. xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/loStats"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.branden.bmicalc.StatsPage">

    <TextView
        android:id="@+id/tvHealthStat"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="145dp"
        android:layout_marginEnd="145dp"
        android:text="Health"
        android:textAlignment="center"
        android:textSize="24sp"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="124dp" />

    <TextView
        android:id="@+id/tvHeightStat"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="144dp"
        android:layout_marginEnd="144dp"
        android:layout_marginTop="117dp"
        android:text="@string/height"
        android:textAlignment="center"
        android:textSize="24sp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvHealthStat" />

    <TextView
        android:id="@+id/tvWeightStat"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="142dp"
        android:layout_marginEnd="142dp"
        android:layout_marginTop="113dp"
        android:text="@string/weightStat"
        android:textAlignment="center"
        android:textSize="24sp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvHeightStat" />

</android.support.v7.constraint.Constraintlayout.>
